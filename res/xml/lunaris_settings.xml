<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lunaris_dashboard_title">

    <PreferenceCategory
        android:key="singularity_one_category"
        android:layout="@layout/settingslib_preference_category_no_title">

    <!-- Themes -->
    <Preference
        android:key="themes"
        android:title="@string/themes_title"
        android:summary="@string/themes_summary"
        android:icon="@drawable/ic_lunaris_themes"
        android:fragment="org.lunaris.settings.fragments.themes.Themes" />
    
    <!-- Quick settings -->
    <Preference
        android:key="quick_settings"
        android:title="@string/quick_settings_title"
        android:summary="@string/quick_settings_summary"
        android:icon="@drawable/ic_lunaris_quick_settings"
        android:fragment="org.lunaris.settings.fragments.quicksettings.QuickSettings" />

    <!-- Notifications -->
    <Preference
        android:key="notifications"
        android:title="@string/notifications_title"
        android:summary="@string/notifications_summary"
        android:icon="@drawable/ic_lunaris_notifications"
        android:fragment="org.lunaris.settings.fragments.notifications.Notifications" />

    <!-- Lock screen -->
    <Preference
        android:key="lock_screen"
        android:title="@string/lock_screen_title"
        android:summary="@string/lock_screen_summary"
        android:icon="@drawable/ic_lunaris_lock_screen"
        android:fragment="org.lunaris.settings.fragments.lockscreen.LockScreen" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="singularity_two_category"
        android:layout="@layout/settingslib_preference_category_no_title">

        <!-- Status bar -->
        <Preference
            android:key="status_bar"
            android:title="@string/status_bar_title"
            android:summary="@string/status_bar_summary"
            android:icon="@drawable/ic_lunaris_status_bar"
            android:fragment="org.lunaris.settings.fragments.statusbar.StatusBar" />

        <!-- Component spoofing -->
        <Preference
            android:key="spoofing"
            android:title="@string/spoofing_title"
            android:icon="@drawable/ic_lunaris_spoofing"
            android:summary="@string/spoofing_summary"
            android:fragment="org.lunaris.settings.fragments.miscellaneous.Spoofing" />

        <!-- Miscellaneous -->
        <Preference
            android:key="miscellaneous"
            android:title="@string/miscellaneous_title"
            android:summary="@string/miscellaneous_summary"
            android:icon="@drawable/ic_lunaris_miscellaneous"
            android:fragment="org.lunaris.settings.fragments.miscellaneous.Miscellaneous" />

        <!-- Power menu -->
        <Preference
            android:key="power_menu"
            android:title="@string/power_menu_title"
            android:summary="@string/power_menu_summary"
            android:icon="@drawable/ic_lunaris_power_menu"
            android:fragment="org.lunaris.settings.fragments.powermenu.PowerMenu" />
            
    </PreferenceCategory>

</PreferenceScreen>
